<script>

    // content list js - start
    document.addEventListener('DOMContentLoaded', function () {

        document.querySelectorAll('.related-posts-section').forEach(section => {
            const container = section.querySelector('.related-posts-container');
            const postsWrapper = section.querySelector('.related-posts');
            const prevButton = section.querySelector('.prev-button');
            const nextButton = section.querySelector('.next-button');

            let scrollAmount = 0;
            const cardWidth = 300; // 카드 너비 + gap

            nextButton.addEventListener('click', () => {
                scrollAmount += cardWidth;
                if (scrollAmount > postsWrapper.scrollWidth - container.offsetWidth) {
                    scrollAmount = postsWrapper.scrollWidth - container.offsetWidth;
                }
                postsWrapper.style.transform = `translateX(-${scrollAmount}px)`;
            });

            prevButton.addEventListener('click', () => {
                scrollAmount -= cardWidth;
                if (scrollAmount < 0) {
                    scrollAmount = 0;
                }
                postsWrapper.style.transform = `translateX(-${scrollAmount}px)`;
            });
        });
    });

</script>

