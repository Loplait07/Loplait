@{
    ViewData["Title"] = "Tour Map";
}

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBo1iPI7wSqNQkL9f2QsLpmZ_We5n7xs1g&language=en&callback=initMap" async defer></script>
<div id="map"></div>

<script>
    function initMap() {
        var location = { lat: 37.5025, lng: 127.0204 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: location
        });

        var marker = new google.maps.Marker({
            position: location,
            map: map
        });
    }

    window.onload = initMap;
</script>
