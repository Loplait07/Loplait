<script>
    function setMapHeight() {
        const mapElement = document.getElementById('map');
        const mapContainer = document.querySelector('.map-container');

        const containerWidth = mapContainer.offsetWidth;

        mapElement.style.height = `${containerWidth}px`;
    }

    function initMap() {
        var location = { lat: 37.5025, lng: 127.0204 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: location
        });

        var marker = new google.maps.Marker({
            position: location,
            map: map
        });
    }

    // when page is loaded
    window.onload = function () {
        setMapHeight();
        initMap();
    };

    // when the boroower size is changed
    window.onresize = setMapHeight;

    // content list js - start
    document.addEventListener('DOMContentLoaded', function () {
        const container = document.querySelector('.related-posts-container');
        const postsWrapper = document.querySelector('.related-posts');
        const prevButton = document.querySelector('.prev-button');
        const nextButton = document.querySelector('.next-button');

        let scrollAmount = 0;
        const cardWidth = 300; // 카드 너비 + gap

        nextButton.addEventListener('click', () => {
            scrollAmount += cardWidth;
            if (scrollAmount > postsWrapper.scrollWidth - container.offsetWidth) {
                scrollAmount = postsWrapper.scrollWidth - container.offsetWidth;
            }
            postsWrapper.style.transform = `translateX(-${scrollAmount}px)`;
        });

        prevButton.addEventListener('click', () => {
            scrollAmount -= cardWidth;
            if (scrollAmount < 0) {
                scrollAmount = 0;
            }
            postsWrapper.style.transform = `translateX(-${scrollAmount}px)`;
        });
    });


</script>


